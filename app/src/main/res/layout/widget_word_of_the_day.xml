<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_border">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/word_title_co"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/antinoou"
            android:gravity="center"
            android:text="@string/string_word_title_coptic"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="10dp"
            android:background="@color/colorText" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/word_coptic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/antinoou"
                android:gravity="center"
                android:text="ⲟⲩⲣⲉⲙⲛ̀ⲭⲏⲙⲓ"
                android:textSize="35sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/word_arabic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/antinoou"
                android:gravity="center"
                android:text="مصري"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/word_english"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/antinoou"
                android:gravity="center"
                android:text="Egyptian"
                android:textSize="25sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>