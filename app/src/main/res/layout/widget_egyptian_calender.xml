<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:padding="@dimen/widget_margin">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/egyptian_calender_text"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">


        <TextClock
            android:id="@+id/time_mow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/egyptian_calender_text"
            android:layout_marginTop="4dp"
            android:layout_toStartOf="@id/spacer_text"
            android:background="@android:color/transparent"
            android:format12Hour="hh:mm"
            android:format24Hour="HH:mm"
            android:shadowColor="#7f000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="2"
            android:textColor="#fffefefe"
            android:textSize="35sp"
            android:textStyle="bold" />

        <TextClock
            android:id="@+id/am_pm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:background="@android:color/transparent"
            android:format12Hour="a"
            android:format24Hour=""
            android:paddingTop="5dp"
            android:shadowColor="#7f000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="2"
            android:textColor="#fffefefe"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/spacer_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/egyptian_calender_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:background="@android:color/transparent"
            android:shadowColor="#7f000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="2"
            android:text=" | "
            android:textColor="#fffefefe"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/today_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/egyptian_calender_text"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@id/spacer_text"
            android:background="@android:color/transparent"
            android:shadowColor="#7f000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="2"
            android:text="ⲠⲓⲀ"
            android:textColor="#fffefefe"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>


    <TextView
        android:id="@+id/egyptian_calender_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        android:shadowColor="#7f000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:textColor="#fffefefe"
        android:textSize="27sp"
        android:textStyle="bold" />

    <TextClock
        android:id="@+id/georgian_calender_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/egyptian_calender_text"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        android:format12Hour="dd MMM yyyy"
        android:format24Hour="dd MMM yyyy"
        android:shadowColor="#7f000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:textColor="#fffefefe"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>